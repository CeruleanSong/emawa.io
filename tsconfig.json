{
	"compilerOptions": {
		/* Basic Options */
		"target": "es2018",
		"module": "commonjs",            
		// "allowJs": true, 
		// "checkJs": true,

		/* Strict Type-Checking Options */
		"strict": true,
		"noImplicitAny": true,
		
		/* Module Resolution Options */
		"moduleResolution": "node",           
		"resolveJsonModule": true,
		"esModuleInterop": true,
		
		/* Transpiling option*/
		"sourceMap": true,
		"outDir": "./dist",
	},
	"exclude": [
		"node_modules/"
	], 
	"include": [
		"src/**/*"
	]
}